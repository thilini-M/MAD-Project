<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategory">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textColor="@color/colorCoral"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="378dp"
        android:layout_height="138dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="168dp"
            android:layout_height="119dp"
            android:src="@drawable/laptops" />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="155dp"
            android:layout_height="124dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/phone" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="397dp"
        android:layout_height="129dp"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/watches"
            android:layout_width="154dp"
            android:layout_height="112dp"
            android:src="@drawable/watches" />

        <ImageView
            android:id="@+id/tv"
            android:layout_width="173dp"
            android:layout_height="match_parent"
            android:src="@drawable/Tv" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="385dp"
        android:layout_height="132dp"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/destop"
            android:layout_width="147dp"
            android:layout_height="109dp"
            android:src="@drawable/desk" />

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="186dp"
            android:layout_height="114dp"
            android:src="@drawable/headphoness" />


    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="13dp"
        android:background="@color/colorCoral"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorCoral"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25dp" />
</RelativeLayout>